<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="@../stylesheets/style.css"
        styleClass="general_light"
        fx:controller="cz.thewhiterabbit.electronicapp.view.controllers.FileMenuController"
        spacing="10">
    <MenuBar >
        <menus>
            <Menu mnemonicParsing="false" text="%menu.file">
                <items>
                    <MenuItem mnemonicParsing="false" text="%menu.file.new_file" fx:id="newFile" />
                    <MenuItem mnemonicParsing="false" text="%menu.file.open" fx:id="openFile" />
                    <Menu fx:id="prefabMenu" mnemonicParsing="false" text="%menu.file.open_prefab"  />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="%menu.file.close" fx:id="closeFile" disable="true"/>
                    <MenuItem mnemonicParsing="false" text="%menu.file.save" fx:id="saveFile" disable="true"/>
                    <MenuItem mnemonicParsing="false" text="%menu.file.save_as" fx:id="saveFileAs" disable="true"/>
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="%menu.file.quit" fx:id="quit"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="%menu.edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="%menu.edit.undo" fx:id="undo" disable="true"/>
                    <MenuItem mnemonicParsing="false" text="%menu.edit.redo" fx:id="redo" disable="true"/>
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="%menu.edit.cut" fx:id="cut" disable="true"/>
                    <MenuItem mnemonicParsing="false" text="%menu.edit.copy" fx:id="copy" disable="true"/>
                    <MenuItem mnemonicParsing="false" text="%menu.edit.paste" fx:id="paste" disable="true"/>
                    <MenuItem mnemonicParsing="false" text="%menu.edit.delete" fx:id="delete" disable="true"/>
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="%menu.edit.select_all" fx:id="selectAll" disable="true" />
                    <MenuItem mnemonicParsing="false" text="%menu.edit.unselect_all" fx:id="deselectAll" disable="true"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="%menu.file.preferences">
                <items>
                    <Menu fx:id="languageMenu" mnemonicParsing="false" text="%menu.file.language"  >
                        <items>
                            <MenuItem fx:id="csButton" mnemonicParsing="false" text="%menu.file.cs_CZ"  />
                            <MenuItem fx:id="enButton" mnemonicParsing="false" text="%menu.file.en_US"  />
                        </items>
                    </Menu>
                </items>
            </Menu>
        </menus>
    </MenuBar>
</HBox>
